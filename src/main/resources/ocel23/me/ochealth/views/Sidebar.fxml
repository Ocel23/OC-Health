<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Accordion fx:id="sidebar" prefWidth="340.0" styleClass="main--sidebar" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ocel23.me.ochealth.controllers.SideBarController">
   <panes>
      <TitledPane fx:id="home" onMouseClicked="#switchToHomeController" styleClass="main--sidebar--item" text="Home" />
      <TitledPane styleClass="main--sidebar--item" text="Hardware">
         <content>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="336.0" styleClass="main--sidebar--item--options">
               <children>
                  <Button fx:id="hardwareUse" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToHardwareUseScene" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Use" />
                  <Button fx:id="hardwareInfo" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToHardwareInfoScene" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Information" />
                  <Button fx:id="hardwareStatistics" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToHardwareStatisticsController" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Statistics" />
               </children>
            </VBox>
         </content>
         <font>
            <Font size="46.0" />
         </font>
      </TitledPane>
      <TitledPane styleClass="main--sidebar--item" text="Sotware">
         <content>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="336.0" styleClass="main--sidebar--item--options">
               <children>
                  <Button fx:id="softwareUse" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToSoftwareUseScene" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Use" />
                  <Button fx:id="softwareInfo" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToSoftwareInfoScene" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Information" />
               </children>
            </VBox>
         </content>
      </TitledPane>
      <TitledPane fx:id="network" styleClass="main--sidebar--item" text="Network">
         <content>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="336.0" styleClass="main--sidebar--item--options">
               <children>
                  <Button fx:id="networkUse" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToNetworkUseScene" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Use" />
                  <Button fx:id="networkInfo" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToNetworkInfoScene" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Information" />
               </children>
            </VBox>
         </content>
      </TitledPane>
      <TitledPane fx:id="devices" styleClass="main--sidebar--item" text="Devices">
         <content>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="336.0" styleClass="main--sidebar--item--options">
               <children>
                  <Button fx:id="devicesInfo" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToDevicesScene" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Information" />
               </children>
            </VBox>
         </content>
      </TitledPane>
      <TitledPane fx:id="powerSource" styleClass="main--sidebar--item" text="Power source">
         <content>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="336.0" styleClass="main--sidebar--item--options">
               <children>
                  <Button fx:id="powerSourceInfoAndUse" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToPowerSourceScene" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Information and Use" />
               </children>
            </VBox>
         </content>
      </TitledPane>
      <TitledPane fx:id="another" styleClass="main--sidebar--item" text="Another">
         <content>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="336.0" styleClass="main--sidebar--item--options">
               <children>
                  <Button fx:id="anotherInfo" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToAnotherComponentsController" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Information" />
               </children>
            </VBox>
         </content>
      </TitledPane>
      <TitledPane fx:id="settings" styleClass="main--sidebar--item" text="Settings">
         <content>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="336.0" styleClass="main--sidebar--item--options">
               <children>
                  <Button fx:id="subSettings" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToSettingsController" style="-fx-background-color: none;" styleClass="main--sidebar--item--option" text="Settings" />
               </children>
            </VBox>
         </content>
      </TitledPane>
   </panes>
</Accordion>
